{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "jsx": "react"
  },
  "include": [
    "src/scripts/**/*"
  ]
}